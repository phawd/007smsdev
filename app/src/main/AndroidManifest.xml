<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.telefoncek.zerosms.detector">
    <uses-feature android:glEsVersion="0x00020000" android:required="true" />
    
    <!-- Android 13+ (API 33+) Permission: Required for displaying notifications -->
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
    
    <!-- SMS Permissions: Required for ZeroSMS detection and sending -->
    <!-- Compatible with Android 6.0+ (API 23+) with runtime permission requests -->
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    
    <!-- Phone State Permission: Required for phone state information -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <!-- 
        Android 12+ (API 31+): android:exported must be explicitly declared for activities/receivers with intent-filters
        Android 14+ (API 34+): android:enableOnBackInvokedCallback enables predictive back gesture
        Data backup disabled for security (no sensitive SMS data should be backed up)
    -->
    <application
        android:enableOnBackInvokedCallback="true"
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:icon="@drawable/main_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        
        <!-- Main activity: android:exported="true" required for launcher activities (Android 12+) -->
        <activity android:name=".MainActivity" android:exported="true">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".StoreActivity"
            android:parentActivityName=".MainActivity"
            tools:ignore="UnusedAttribute">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".MainActivity" />
        </activity>

        <!-- 
            SMS Broadcast Receiver: Detects incoming Class-0 SMS messages
            android:exported="true" required for receivers with intent-filters (Android 12+)
            Priority=10 ensures early processing of SMS broadcasts
            Compatible with Android 6.0+ (API 23+) through Android 14+ (API 34+)
        -->
        <receiver
            android:name=".PingSmsReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter android:priority="10">
                <action android:name="android.intent.action.DATA_SMS_RECEIVED" />
                <data
                    android:host="*"
                    android:scheme="sms" />
            </intent-filter>
        </receiver>

        <service
            android:name=".Type0SmsMonitorService"
            android:enabled="true"
            android:exported="false" />
    </application>

</manifest>
