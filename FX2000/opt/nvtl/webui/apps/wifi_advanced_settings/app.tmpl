                <input class="toggleSwitchCheckbox" type="checkbox" id="EnableWifi" name="EnableWifi"<tmpl_if IN_SET(EnableWifi, "true", "1", "on")> checked="checked"</tmpl_if><tmpl_if IN_SET(disableWifi, "on")>disabled="disabled"</tmpl_if><tmpl_if isLocked> disabled="disabled"</tmpl_if> />
