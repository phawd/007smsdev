		<tmpl_var _("webui", "webui_app_locked_text")>
	</div>
</tmpl_if>

<p class="note">
	<tmpl_udf GET_PO_TEXT("backup_restore_intro", gProductName)>
</p>

<tmpl_if errorCount>
	<div class="notification app error">
		<div class="notification_inner">
			<p>
				<tmpl_var _("webui", "webui_operation_failed_text")>
			</p>
		</div>
	</div>
</tmpl_if>

