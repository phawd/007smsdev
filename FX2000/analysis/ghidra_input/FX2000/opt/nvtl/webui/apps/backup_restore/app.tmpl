		<h2 class="sectionHead"><tmpl_var _("webui", "backup_restore_the_backup_sub_header_text")></h2>

		<p class="note">
			<tmpl_udf GET_PO_TEXT("backup_restore_the_backup_subintro_text", gProductNumber)>
		</p>

		<div class="table">
			<div id="passcodeBackupRow" class="form-group">
				<div class="label">
					<label for="passcodeBackup"><tmpl_udf GET_PO_TEXT("backup_restore_admin_login_label", gProductName)></label>
				</div>
				<div class="input"></div>
				<tmpl_if showHelpText>
