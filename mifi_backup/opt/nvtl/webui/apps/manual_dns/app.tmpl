<tmpl_if isHidden>
	<div class="notification app error">
		<tmpl_var _("webui", "webui_app_hidden_text")>
	</div>
<tmpl_else>
<script type="text/javascript">
	/* <![CDATA[ */
	$(function()
	{
		checkForDisabled();

		$("#internetProfileManualDns").change(checkForDisabled);
	});

	function checkForDisabled()
	{
		if ($("#internetProfileManualDns").is(":checked")) {
			$("#internetProfileDnsAddress1, #internetProfileDnsAddress2").prop("disabled", false);
		} else {
			$("#internetProfileDnsAddress1, #internetProfileDnsAddress2").prop("disabled", true);
			$(".inline_error").remove();
			$("#internetProfileDnsAddress1").val("");
			$("#internetProfileDnsAddress2").val("");
		}
		if (jQuery.uniform) $.uniform.update()
	}
	/* ]]> */
</script>

<tmpl_if errorCount>
	<div class="notification app error">
		<div class="notification_inner">
			<p>
				<tmpl_var _("webui", "webui_save_code_failed_text")>
			</p>
		</div>
	</div>
</tmpl_if>

<tmpl_if gPostSuccess>
	<div class="notification app success">
		<div class="notification_inner">
			<p>
				<tmpl_var _("webui", "webui_save_code_success_text")>
			</p>
		</div>
	</div>
</tmpl_if>


<tmpl_if isLocked>
	<div class="notification app error">
		<tmpl_var _("webui", "webui_app_locked_text")>
	</div>
</tmpl_if>
<div class="note">
	<p><tmpl_udf GET_PO_TEXT("adv_manual_dns_intro_text", gProductName)></p>
</div>

<form method="POST" action="<tmpl_udf GET_URI('manual_dns')>">
	<fieldset class="first">
		<div class="table">
			<div class="row clearfix">
				<div class="col label">
					<label for="internetProfileManualDns"><tmpl_var _("webui", "adv_manual_dns_enable_label")></label>
				</div>
				<div class="col input">
					<input type="checkbox" name="internetProfileManualDns" id="internetProfileManualDns"<tmpl_if IN_SET(internetProfileManualDns, "on")> checked="checked"</tmpl_if> />
				</div>
			</div>

			<div class="row clearfix">
				<div class="col label">
					<label for="internetProfileDnsAddress1"><tmpl_var _("webui", "adv_manual_dns_address1_label")></label>
				</div>
				<tmpl_if showPlaceHolderText>
					<div class="col input">
						<input type="text" name="internetProfileDnsAddress1" id="internetProfileDnsAddress1" value="<tmpl_var internetProfileDnsAddress1>" placeholder='<tmpl_var _("webui", "adv_manual_dns_address1_help_text")>' <tmpl_if internetProfileDnsAddress1Error> class="error"</tmpl_if><tmpl_if IN_SET(internetProfileManualDns, "off")> disabled="disabled"</tmpl_if> />
					</div>
				<tmpl_else>
					<div class="col input">
						<input type="text" name="internetProfileDnsAddress1" id="internetProfileDnsAddress1" value="<tmpl_var internetProfileDnsAddress1>" <tmpl_if internetProfileDnsAddress1Error> class="error"</tmpl_if><tmpl_if IN_SET(internetProfileManualDns, "off")> disabled="disabled"</tmpl_if> />
					</div>					
					<div class="col help">
						<tmpl_var _("webui", "adv_manual_dns_address1_help_text")>
					</div>
				</tmpl_if>
				<tmpl_if internetProfileDnsAddress1Error>
					<div class="col inline_error">
						<tmpl_var internetProfileDnsAddress1Error>
					</div>
				</tmpl_if>
			</div>

			<div class="row clearfix">
				<div class="col label">
					<label for="internetProfileDnsAddress2"><tmpl_var _("webui", "adv_manual_dns_address2_label")></label>
				</div>
				<tmpl_if showPlaceHolderText>
					<div class="col input">
						<input type="text" name="internetProfileDnsAddress2" id="internetProfileDnsAddress2" value="<tmpl_var internetProfileDnsAddress2>" placeholder='<tmpl_var _("webui", "adv_manual_dns_address2_help_text")>' <tmpl_if internetProfileDnsAddress2Error> class="error"</tmpl_if><tmpl_if IN_SET(internetProfileManualDns, "off")> disabled="disabled"</tmpl_if> />
					</div>
				<tmpl_else>
					<div class="col input">
						<input type="text" name="internetProfileDnsAddress2" id="internetProfileDnsAddress2" value="<tmpl_var internetProfileDnsAddress2>" <tmpl_if internetProfileDnsAddress2Error> class="error"</tmpl_if><tmpl_if IN_SET(internetProfileManualDns, "off")> disabled="disabled"</tmpl_if> />
					</div>
					<div class="col help">
						<tmpl_var _("webui", "adv_manual_dns_address2_help_text")>
					</div>
				</tmpl_if>
				<tmpl_if internetProfileDnsAddress2Error>
					<div class="col inline_error">
						<tmpl_var internetProfileDnsAddress2Error>
					</div>
				</tmpl_if>
			</div>
		</div><!-- /.table -->
	</fieldset>

	<div class="button_container clearfix">
		<input type="hidden" name="gSecureToken" id="gSecureToken" value="<tmpl_var gSecureToken>" />
		<button type="submit" id="submit" class="primary" <tmpl_if isLocked>disabled="disabled"</tmpl_if> >
			<tmpl_var _("webui", "webui_save_button")>
		</button>
	</div>
</form>
</tmpl_if>
