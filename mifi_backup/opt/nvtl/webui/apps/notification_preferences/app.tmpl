<tmpl_if isHidden>
	<div class="notification app error">
		<tmpl_var _("webui", "webui_app_hidden_text")>
	</div>
<tmpl_else>
	<script type="text/javascript">
		/* <![CDATA[ */
		$(function()
		{	
			<tmpl_if stealthModeShow>		
				audioAndLedDisplay();
			</tmpl_if>
			$("#audioEnabled").change(audioAlertDisplay);
			$("#stealthModeEnabled").change(audioAndLedDisplay);

		});

		function disableAudioAlerts()
		{
			$("#startUp").prop("disabled", true).addClass("disabled");
			$("#lowBattery").prop("disabled", true).addClass("disabled");
			$("#criticalLowBattery").prop("disabled", true).addClass("disabled");
			$("#chargingJetpack").prop("disabled", true).addClass("disabled");			
			$("#externalCharging").prop("disabled", true).addClass("disabled");
			$("#usbAlert").prop("disabled", true).addClass("disabled");
			$("#simErrors").prop("disabled", true).addClass("disabled");
			$("#newMessage").prop("disabled", true).addClass("disabled");
			$("#deviceJoin").prop("disabled", true).addClass("disabled");
			$("#softwareUpdate").prop("disabled", true).addClass("disabled");
			$("#roaming").prop("disabled", true).addClass("disabled");
			$("#wifiDisabled").prop("disabled", true).addClass("disabled");
			$("#networkSelection").prop("disabled", true).addClass("disabled");
			$("#massStorage").prop("disabled", true).addClass("disabled");
            $("#serviceErrors").prop("disabled", true).addClass("disabled");
		}

		function enableAudioAlerts()
		{
			$("#startUp").prop("disabled", false).removeClass("disabled");
			$("#lowBattery").prop("disabled", false).removeClass("disabled");
			$("#criticalLowBattery").prop("disabled", false).removeClass("disabled");
			$("#chargingJetpack").prop("disabled", false).removeClass("disabled");			
			$("#externalCharging").prop("disabled", false).removeClass("disabled");
			$("#usbAlert").prop("disabled", false).removeClass("disabled");
			$("#simErrors").prop("disabled", false).removeClass("disabled");
			$("#newMessage").prop("disabled", false).removeClass("disabled");
			$("#deviceJoin").prop("disabled", false).removeClass("disabled");
			$("#softwareUpdate").prop("disabled", false).removeClass("disabled");
			$("#roaming").prop("disabled", false).removeClass("disabled");
			$("#wifiDisabled").prop("disabled", false).removeClass("disabled");
			$("#networkSelection").prop("disabled", false).removeClass("disabled");
			$("#massStorage").prop("disabled", false).removeClass("disabled");
            $("#serviceErrors").prop("disabled", false).removeClass("disabled");
		}

		function audioAlertDisplay()
		{
			if ($("#audioEnabled").prop("checked")) {
				enableAudioAlerts();
			} else {
				disableAudioAlerts();
			}
			if (jQuery.uniform) $.uniform.update();
		}

		function audioAndLedDisplay()
		{
			if ($("#stealthModeEnabled").prop("checked")) {
				$("#ledEnabled").prop("disabled", true).addClass("disabled");
				$("#notificationWakeupEnabled").prop("disabled", true).addClass("disabled");
				$("#audioEnabled").prop("disabled", true).addClass("disabled");
				disableAudioAlerts();
			} else {
				$("#ledEnabled").prop("disabled", false).removeClass("disabled");
				$("#notificationWakeupEnabled").prop("disabled", false).removeClass("disabled");
				$("#audioEnabled").prop("disabled", false).removeClass("disabled");
				audioAlertDisplay();
			}
			if (jQuery.uniform) $.uniform.update();
		}
	
		/* ]]> */
	</script>

	<tmpl_if isLocked>
		<div class="notification app error">
			<tmpl_var _("webui", "webui_app_locked_text")>
		</div>
	</tmpl_if>

	<tmpl_if errorCount>
		<div class="notification app error">
			<div class="notification_inner" id="errorNotification">
				<p>
					<tmpl_var _("webui", "webui_save_code_failed_text")>
				</p>
			</div>
		</div>
	</tmpl_if>

	<tmpl_if gPostSuccess>
		<div class="notification app success">
			<div class="notification_inner" id="successNotification">
				<p>
					<tmpl_var _("webui", "webui_save_code_success_text")>
				</p>
			</div>
		</div>
	</tmpl_if>

	<form id="notifications_preferences_form" method="POST" action="<tmpl_udf GET_URI('notifications')>">
		<div>
			<input type="hidden" name="gSecureToken" id="gSecureToken" value="<tmpl_var gSecureToken>" />
		</div>
		<tmpl_if notificationsShow>
			<div class="table">
				<div class="row clearfix">
					<div class="col-primary">
						<tmpl_if stealthModeShow>
							<div class="row clearfix">
								<div class="col label-long">
									<tmpl_if showToolTip>
										<div class="col tooltip tooltip-help" title="<tmpl_var _('webui', 'preferences_stealth_mode_help_text')>">
											<tmpl_var _("webui", "webui_inline_help_icon")>
										</div>
									</tmpl_if>
									<h4><label for="stealthModeEnabled"> <tmpl_var _("webui", "preferences_stealth_mode_label")></label></h4>
								</div>
								<div class="col input-checkbox">
									<input type="checkbox" name="stealthModeEnabled" id="stealthModeEnabled"<tmpl_if IN_SET(stealthModeEnabled,"on")> checked="checked"</tmpl_if> />
								</div>
							</div>
						</tmpl_if>

						<tmpl_if ledEnabledShow>
							<div class="row clearfix">
								<div class="col label-long">
									<tmpl_if showToolTip>
										<div class="col tooltip tooltip-help" title="<tmpl_var _('webui', 'preferences_led_enabled_help_text')>">
											<tmpl_var _("webui", "webui_inline_help_icon")>
										</div>
									</tmpl_if>
									<h4><label for="ledEnabled"> <tmpl_var _("webui", "preferences_led_enabled_label")></label></h4>
								</div>
								<div class="col input-checkbox">
									<input type="checkbox" name="ledEnabled" id="ledEnabled"<tmpl_if IN_SET(ledEnabled,"on")> checked="checked"</tmpl_if> />
								</div>
							</div>
						</tmpl_if>

						<tmpl_if audioAlertsShow>
							<div class="row clearfix">
								<div class="col label-long">
									<tmpl_if showToolTip>
										<div class="col tooltip tooltip-help" title="<tmpl_var _('webui', 'preferences_alert_screen_enabled_help_text')>">
											<tmpl_var _("webui", "webui_inline_help_icon")>
										</div>
									</tmpl_if>
									<h4><label for="notificationWakeupEnabled"> <tmpl_var _("webui", "preferences_alert_screen_enabled_label")></label></h4>
								</div>
								<div class="col input-checkbox">
									<input type="checkbox" name="notificationWakeupEnabled" id="notificationWakeupEnabled"<tmpl_if IN_SET(notificationWakeupEnabled,"on")> checked="checked"</tmpl_if> />
								</div>
							</div>
							<div class="row clearfix">
								<div class="col label-long">
									<tmpl_if showToolTip>
										<div class="col tooltip tooltip-help" title="<tmpl_udf GET_PO_TEXT('preferences_alert_audio_enabled_help_text', gProductName)>">
											<tmpl_var _("webui", "webui_inline_help_icon")>
										</div>
									</tmpl_if>
									<h4><label for="audioEnabled"> <tmpl_var _("webui", "preferences_audio_enabled_label")></label></h4>
								</div>
								<div class="col input-checkbox">
									<input type="checkbox" name="audioEnabled" id="audioEnabled"<tmpl_if IN_SET(audioEnabled,"on")> checked="checked"</tmpl_if> />
								</div>
							</div>
						</tmpl_if>
					</div><!--col-primary-->
				</div>

				<div class="row clearfix">
					<tmpl_if audioAlertsShow>
						<h3 class="subSectionHead"><tmpl_var _("webui", "preferences_audio_alerts_label")></h3>
						<div class="col-primary">
							<div class="row clearfix">
								<div class="col label-long">
									<h4><label for="startUp"> <tmpl_var _("webui", "preferences_audio_alerts_startup_label")></label></h4>
								</div>
								<div class="col input-checkbox">
									<input type="checkbox" name="startUp" id="startUp"<tmpl_if IN_SET(startUp,"on")> checked="checked"</tmpl_if> />
								</div>
							</div>
							<div class="row clearfix">
								<div class="col label-long">
									<h4><label for="lowBattery"> <tmpl_var _("webui", "preferences_audio_alerts_low_battery_label")></label></h4>
								</div>
								<div class="col input-checkbox">
									<input type="checkbox" name="lowBattery" id="lowBattery"<tmpl_if IN_SET(lowBattery,"on")> checked="checked"</tmpl_if> />
								</div>
							</div>
							<div class="row clearfix">
								<div class="col label-long">
									<h4><label for="criticalLowBattery"> <tmpl_var _("webui", "preferences_audio_alerts_critical_low_battery_label")></label></h4>
								</div>
								<div class="col input-checkbox">
									<input type="checkbox" name="criticalLowBattery" id="criticalLowBattery"<tmpl_if IN_SET(criticalLowBattery,"on")> checked="checked"</tmpl_if> />
								</div>
							</div>
							<div class="row clearfix">
								<div class="col label-long">
									<h4><label for="chargingJetpack"> <tmpl_udf GET_PO_TEXT("preferences_audio_alerts_charging_jetpack_label", gProductName)></label></h4>
								</div>
								<div class="col input-checkbox">
									<input type="checkbox" name="chargingJetpack" id="chargingJetpack"<tmpl_if IN_SET(chargingJetpack,"on")> checked="checked"</tmpl_if> />
								</div>
							</div>
							<tmpl_if externalChargingAlertShow>
								<div class="row clearfix">
									<div class="col label-long">
										<h4><label for="externalCharging"> <tmpl_var _("webui", "preferences_audio_alerts_external_charging_label")></label></h4>
									</div>
									<div class="col input-checkbox">
										<input type="checkbox" name="externalCharging" id="externalCharging"<tmpl_if IN_SET(externalCharging,"on")> checked="checked"</tmpl_if> />
									</div>
								</div>
							</tmpl_if>
							<tmpl_if usbModeAlertShow>
								<div class="row clearfix">
									<div class="col label-long">
										<h4><label for="usbAlert"> <tmpl_var _("webui", "preferences_audio_alerts_usb_connection_label")></label></h4>
									</div>
									<div class="col input-checkbox">
										<input type="checkbox" name="usbAlert" id="usbAlert"<tmpl_if IN_SET(usbAlert,"on")> checked="checked"</tmpl_if> />
									</div>
								</div>
							</tmpl_if>
							<tmpl_if smbAlertShow>
								<div class="row clearfix">
									<div class="col label-long">
										<h4><label for="massStorage"> <tmpl_var _("webui", "preferences_audio_alerts_usb_mass_storage_label")></label></h4>
									</div>
									<div class="col input-checkbox">
										<input type="checkbox" name="massStorage" id="massStorage"<tmpl_if IN_SET(massStorage,"on")> checked="checked"</tmpl_if> />
									</div>
								</div>
							</tmpl_if>
							<div class="row clearfix">
								<div class="col label-long">
									<h4><label for="simErrors"> <tmpl_var _("webui", "preferences_audio_alerts_sim_errors_label")></label></h4>
								</div>
								<div class="col input-checkbox">
									<input type="checkbox" name="simErrors" id="simErrors"<tmpl_if IN_SET(simErrors,"on")> checked="checked"</tmpl_if> />
								</div>
							</div>
						</div><!--col-primary-->

						<div class="col-secondary">
							<tmpl_if smsAlertShow>
								<div class="row clearfix">
									<div class="col label-long">
										<h4><label for="newMessage"> <tmpl_var _("webui", "preferences_audio_alerts_new_message_label")></label></h4>
									</div>
									<div class="col input-checkbox">
										<input type="checkbox" name="newMessage" id="newMessage"<tmpl_if IN_SET(newMessage,"on")> checked="checked"</tmpl_if> />
									</div>
								</div>
							</tmpl_if>
							<div class="row clearfix">
								<div class="col label-long">
									<h4><label for="deviceJoin"> <tmpl_var _("webui", "preferences_audio_alerts_device_join_label")></label></h4>
								</div>
								<div class="col input-checkbox">
									<input type="checkbox" name="deviceJoin" id="deviceJoin"<tmpl_if IN_SET(deviceJoin,"on")> checked="checked"</tmpl_if> />
								</div>
							</div>
							<tmpl_if softwareUpdateAlertShow>
								<div class="row clearfix">
									<div class="col label-long">
										<h4><label for="softwareUpdate"> <tmpl_var _("webui", "preferences_audio_alerts_software_update_label")></label></h4>
									</div>
									<div class="col input-checkbox">
										<input type="checkbox" name="softwareUpdate" id="softwareUpdate"<tmpl_if IN_SET(softwareUpdate,"on")> checked="checked"</tmpl_if> />
									</div>
								</div>
							</tmpl_if>
							<div class="row clearfix">
								<div class="col label-long">
									<h4><label for="roaming"> <tmpl_var _("webui", "preferences_audio_alerts_roaming_label")></label></h4>
								</div>
								<div class="col input-checkbox">
									<input type="checkbox" name="roaming" id="roaming"<tmpl_if IN_SET(roaming,"on")> checked="checked"</tmpl_if> />
								</div>
							</div>
							<tmpl_if wifiEnabledShow>
								<div class="row clearfix">
									<div class="col label-long">
										<h4><label for="wifiDisabled"> <tmpl_var _("webui", "preferences_audio_alerts_wifi_disabled_label")></label></h4>
									</div>
									<div class="col input-checkbox">
										<input type="checkbox" name="wifiDisabled" id="wifiDisabled"<tmpl_if IN_SET(wifiDisabled,"on")> checked="checked"</tmpl_if> />
									</div>
								</div>
							</tmpl_if>
							<div class="row clearfix">
								<div class="col label-long">
									<h4><label for="networkSelection"> <tmpl_var _("webui", "preferences_audio_alerts_network_selection_label")></label></h4>
								</div>
								<div class="col input-checkbox">
									<input type="checkbox" name="networkSelection" id="networkSelection"<tmpl_if IN_SET(networkSelection,"on")> checked="checked"</tmpl_if> />
								</div>
							</div>
							<tmpl_if serviceNotificationAlertShow>
								<div class="row clearfix">
									<div class="col label-long">
										<h4><label for="serviceErrors"> <tmpl_var _("webui", "preferences_audio_alerts_service_errors_label")></label></h4>
									</div>
									<div class="col input-checkbox">
											<input type="checkbox" name="serviceErrors" id="serviceErrors"<tmpl_if IN_SET(serviceErrors,"on")> checked="checked"</tmpl_if> />
									</div>
								</div>
							</tmpl_if>
						</div><!--col-secondary-->
					</tmpl_if><!--audioAlertsShow-->
				</div>
			</div><!--table-->
		</tmpl_if>


		<div class="button_container clearfix">
			<button type="submit" class="primary"<tmpl_if isLocked> disabled="disabled"</tmpl_if>>
				<tmpl_var _("webui", "webui_save_button")>
			</button>
		</div>
	</form>
</tmpl_if>
