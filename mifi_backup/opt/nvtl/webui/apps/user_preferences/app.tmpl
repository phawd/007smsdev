<tmpl_if isHidden>
	<div class="notification app error">
		<tmpl_var _("webui", "webui_app_hidden_text")>
	</div>
<tmpl_else>
	<tmpl_if isLocked>
		<div class="notification app error">
			<tmpl_var _("webui", "webui_app_locked_text")>
		</div>
	</tmpl_if>

	<tmpl_if errorCount>
		<div class="notification app error">
			<div class="notification_inner" id="errorNotification">
				<p>
					<tmpl_var _("webui", "webui_save_code_failed_text")>
				</p>
			</div>
		</div>
	</tmpl_if>

	<tmpl_if gPostSuccess>
		<div class="notification app success">
			<div class="notification_inner" id="successNotification">
				<p>
					<tmpl_var _("webui", "webui_save_code_success_text")>
				</p>
			</div>
		</div>
	</tmpl_if>

	<form id="user_preferences_form" method="POST" action="<tmpl_udf GET_URI('userpreferences')>">
		<div>
			<input type="hidden" name="gSecureToken" id="gSecureToken" value="<tmpl_var gSecureToken>" />
		</div>

		<fieldset id="personalization" class="last">
			<div class="table">
				<div class="row clearfix">
					<div class="col label">
						<h4><label for="language"><tmpl_var _("webui", "preferences_language_options_label")></label></h4>
					</div>
					<div class="col input">
						<select name="language" id="language">
							<tmpl_include "language_options.tmpl">									
						</select>
					</div>
				</div>
				<div class="row clearfix">
					<div class="col label">
						<h4><label for="dateFormat" id="lblDateFormat"><tmpl_var _("webui", "preferences_date_format_label")></label></h4>
					</div>
					<div class="col input">
						<select name="dateFormat" id="dateFormat">
							<tmpl_include "date_format_options.tmpl">
						</select>
					</div>
				</div>
				<div class="row clearfix">
					<div class="col label">
						<h4><label for="timeFormat" id="lblTimeFormat"><tmpl_var _("webui", "preferences_time_format_label")></label></h4>
					</div>
					<div class="col input">
						<select name="timeFormat" id="timeFormat">
							<tmpl_include "time_format_options.tmpl">
						</select>
					</div>
				</div>
				<div class="row clearfix">
					<div class="col label">
						<h4><label for="distanceUnit" id="lblDistanceFormat"><tmpl_var _("webui", "preferences_distace_format_label")></label></h4>
					</div>
					<div class="col input">
						<select name="distanceUnit" id="distanceUnit">
							<tmpl_include "distance_unit_options.tmpl">
						</select>
					</div>
				</div>
				<div class="row clearfix">
					<div class="col label">
						<h4><label for="numericFormat" id="lblNumberFormat"><tmpl_var _("webui", "preferences_numeric_format_label")></label></h4>
					</div>
					<div class="col input">
						<select name="numericFormat" id="numericFormat">
							<tmpl_include "numeric_format_options.tmpl">
						</select>
					</div>
				</div>
			</div><!-- /.table -->
		</fieldset>
		<div class="button_container clearfix">
			<button type="submit" class="primary"<tmpl_if isLocked> disabled="disabled"</tmpl_if>>
				<tmpl_var _("webui", "webui_save_button")>
			</button>
		</div>
	</form>
</tmpl_if>
